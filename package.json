{
  "name": "@vc-vantage/semantic-release-npm-github-config",
  "version": "1.0.0",
  "description": "semantic-release shareable configuration for GitHub",
  "main": ".releaserc.json",
  "files": [
    ".releaserc.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vc-vantage/semantic-release-npm-github-config.git"
  },
  "keywords": [
    "semantic-release",
    "semantic-release-config",
    "github",
    "git",
    "release",
    "changelog"
  ],
  "author": "Piotr Plenik <piotr.plenik@vimn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vc-vantage/semantic-release-npm-github-config/issues"
  },
  "homepage": "https://github.com/vc-vantage/semantic-release-npm-github-config#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "xo": {
    "prettier": true
  },
  "dependencies": {
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/commit-analyzer": "^6.3.3",
    "@semantic-release/git": "^7.0.18",
    "@semantic-release/github": "^5.5.5",
    "@semantic-release/npm": "^5.3.4",
    "@semantic-release/release-notes-generator": "^7.3.5"
  },
  "peerDependencies": {
    "semantic-release": ">=15.13.31"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "semantic-release": "^15.13.31",
    "xo": "^0.25.3"
  }
}
